/**jy.wxss**/
.container {
    background-color: #f7f7f7;
    padding: 0;
}
.user-jy {
    display: flex;
    background: #fefefe;
    border-bottom: 1rpx solid #eee;
}
.user-jy-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 11pt;
    line-height: 150%;
    height: 150rpx;
    padding: 20rpx;
    border-right: 1rpx solid #eee;
}
.user-jy-dbet {
    border: none;
}
.user-jy-hd {
    color: #777;
}
.user-jy-bd {
    display: flex;
    justify-content: center;
}
.user-jy-value {
    font-size: 28pt;
    color: #ffcb63;
    font-weight: bold;
    line-height: 150%;
    padding: 0 20rpx 0 30rpx;
}
.user-jy-text {
    color: #999;
    font-size: 10pt;
    line-height: 200%;
    align-self: flex-end;
}
.book-list {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    padding: 25rpx 30rpx;
}
.current-type {
    color: #777;
    font-size: 10pt;
    line-height: 200%;
    margin-bottom: 15rpx;
}
.book-wraper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
    background: #fff;
    border-radius: 3px;
}
.book-name {  
    font-size: 15pt;
    line-height: 135%;
    text-align: center;
}
.book-info {
   
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    padding: 10rpx 20rpx;
}
.book-date {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    font-size: 11pt;
    color: #888;
}
.book-date text {
    line-height: 150%;
}

.book-img {
    margin-right: 10rpx;
    height: 100rpx;
    width: 100rpx;
}